@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
<link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" asp-append-version="true">

<div class="container-fluid justify-center items-center h-screen">
    <div class="w-100 p-4 shadow rounded bg-white">
        <h2 class="text-2xl mb-4 text-center">Calculator</h2>
        <input id="expressionInput" class="w-full mb-4 p-2 w-100 text-end" type="text" readonly />
        <div class="container gap-2 p-0">
            <button class="btn btn-primary text-center" onclick="appendExpression('(')">(</button>
            <button class="btn btn-primary text-center" onclick="appendExpression(')')">)</button>
            <button class="btn btn-danger text-center" onclick="clearExpression()">C</button>
            <button class="btn btn-danger text-center" onclick="clearLastElement()"><i class='bx bx-undo'></i></button>
            <button class="btn btn-primary text-center" onclick="appendExpression('7')">7</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('8')">8</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('9')">9</button>
            <button class="btn btn-warning text-center" onclick="appendExpression('/')">/</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('4')">4</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('5')">5</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('6')">6</button>
            <button class="btn btn-warning text-center" onclick="appendExpression('*')">*</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('1')">1</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('2')">2</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('3')">3</button>
            <button class="btn btn-warning text-center" onclick="appendExpression('-')">-</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('0')">0</button>
            <button class="btn btn-primary text-center" onclick="appendExpression('.')">.</button>
            <button class="btn btn-primary text-center" onclick="evaluateExpression()">=</button>
            <button class="btn btn-warning text-center" onclick="appendExpression('+')">+</button>
        </div>
    </div>
</div>

<script src="~/js/main.js"></script>
